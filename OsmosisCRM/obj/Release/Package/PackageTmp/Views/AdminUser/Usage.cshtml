@{
    ViewBag.Title = "Usage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Usage</h2>

<div ng-controller="UsageSummaryCntrl" id="UsageSummaryCntrl" ng-init="GetChartData()">

    <!-- row -->
    <div class="row" ng-show="ShownChart">
        <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="white-box">
                <h3 class="box-title" ng-show="ShowHourse">LAST 8 HOURS WATER CONSUMPTION (LITRE)</h3>
                @*<ul class="list-inline text-right">
                    <li>
                        <h5><i class="fa fa-circle m-r-5" style="color: #00bfc7;"></i>iPhone</h5>
                    </li>
                    <li>
                        <h5><i class="fa fa-circle m-r-5" style="color: #fdc006;"></i>iPad</h5>
                    </li>
                    <li>
                        <h5><i class="fa fa-circle m-r-5" style="color: #9675ce;"></i>iPod</h5>
                    </li>
                </ul>*@
                <div id="morris-area-chart" ng-show="ShowHourse"></div>

                <h3 class="box-title">LAST 8 HOURS WATER CONSUMPTION (LITRE)</h3>
                <div class="panel-wrapper collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <table id="dtHoursData" class="display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Hour</th>
                                    <th>Consumption(litre)</th>
                                </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>


            </div>
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="white-box">
                <h3 class="box-title" ng-show="ShowHDaily">DAILY WATER CONSUMPTION (LITRE)</h3>
                @*<ul class="list-inline text-right">
                    <li>
                        <h5><i class="fa fa-circle m-r-5" style="color: #00bfc7;"></i>Site A View</h5>
                    </li>
                    <li>
                        <h5><i class="fa fa-circle m-r-5" style="color: #fdc006;"></i>Site B View</h5>
                    </li>
                </ul>*@
                <div id="morris-bar-chart"></div>

                <h3 class="box-title">LAST 7 DAY WATER CONSUMPTION (LITRE)</h3>
                <div class="panel-wrapper collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <table id="dtDailyData" class="display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Consumption(litre)</th>
                                </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-init="GetHistory()">
        <div class="panel panel-info block4" style="position: static; zoom: 1;">
            <div class="panel-heading">
                Case List
            </div>
            <div class="panel-wrapper collapse in" aria-expanded="true">
                <div class="panel-body">
                    <table id="dtCaseList" class="display" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Machine Code</th>
                                <th>Case Type</th>
                                <th>Filter Pack</th>
                                <th>Date</th>
                                <th>Problem</th>
                                <th>Suggest</th>
                                <th>Remarks</th>
                                <th>Completed</th>
                            </tr>
                        </thead>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <hr>
    </div>

    <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>

    <script src="/plugins/bower_components/raphael/raphael-min.js"></script>
    <script src="/plugins/bower_components/morrisjs/morris.js"></script>

    <link href="/plugins/bower_components/morrisjs/morris.css" rel="stylesheet" />

</div>