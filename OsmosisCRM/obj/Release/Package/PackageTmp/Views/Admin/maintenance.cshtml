@{
    ViewBag.Title = "maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="MaintenanceCntrl" id="MaintenanceCntrl">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Maintenance List</h4>
        </div>
    </div>
    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="divLead" ng-show="showAddLeadPanel">
            <form class="form-horizontal ng-pristine ng-valid" name="fmMainpack" id="fmMainpack" novalidate enctype="multipart/form-data">
                <div class="panel panel-info block4" style="position: static; zoom: 1;">
                    <div class="panel-heading">
                        Add/Edit Maintenance
                        <div class="pull-right">
                            <a href="#" data-perform="panel-collapse"><i class="ti-minus"></i></a>
                        </div>
                    </div>
                    <div class="panel-wrapper collapse in" aria-expanded="true">
                        <div class="panel-body">

                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">Customer code:</label>
                                    <div class="col-lg-8" data-ng-class="{ 'has-error' : fmMainpack.customercode.$invalid && (fmMainpack.customercode.$dirty || maintenancesubmitted)}">
                                        <input id="customercode" name="customercode" ng-model="objmainpack.customercode" class="form-control" placeholder="Customer code" type="text" ng-required="true">
                                        <p ng-show="fmMainpack.customercode.$error.required && (fmMainpack.customercode.$dirty || maintenancesubmitted)" class="help-block">Customer code is required.</p>
                                    </div>
                                </div>

                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">Machine code:</label>
                                    <div class="col-lg-8" data-ng-class="{ 'has-error' : fmMainpack.machineid.$invalid && (fmMainpack.machineid.$dirty || maintenancesubmitted)}">
                                        <input id="machineid" name="machineid" ng-model="objmainpack.machineid" class="form-control" placeholder="Machine code" type="text" ng-required="true">
                                        <p ng-show="fmMainpack.machineid.$error.required && (fmMainpack.machineid.$dirty || maintenancesubmitted)" class="help-block">Machine code is required.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">Mainteance Services:</label>
                                    <div class="col-lg-8">
                                        <textarea id="maincheck" name="maincheck" ng-model="objmainpack.maincheck" class="form-control" placeholder="Problem" type="text"></textarea>
                                    </div>
                                </div>

                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">Maintenance:</label>
                                    <div class="col-lg-8">
                                        <textarea id="havemain" name="havemain" ng-model="objmainpack.havemain" class="form-control" placeholder="Suggest" type="text"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">Start Date:</label>
                                    <div class="col-lg-8" data-ng-class="{ 'has-error' : fmMainpack.start.$invalid && (fmMainpack.start.$dirty || maintenancesubmitted)}">
                                        <div class="input-group date" data-provide="datepicker" data-date-autoclose="true" data-date-format="dd/mm/yyyy">
                                            <input type="text" class="form-control" id="start" name="start" ng-model="objmainpack.start" ng-required="true">
                                            <div class="input-group-addon">
                                                <span class="fa fa-calendar"></span>
                                            </div>
                                        </div>
                                        <p ng-show="fmMainpack.start.$error.required && (fmMainpack.start.$dirty || maintenancesubmitted)" class="help-block">Start Date is required.</p>
                                    </div>
                                </div>

                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">End Date:</label>
                                    <div class="col-lg-8" data-ng-class="{ 'has-error' : fmMainpack.end.$invalid && (fmMainpack.end.$dirty || maintenancesubmitted)}">
                                        <div class="input-group date" data-provide="datepicker" data-date-autoclose="true" data-date-format="dd/mm/yyyy">
                                            <input type="text" class="form-control" id="end" name="end" ng-model="objmainpack.end" ng-required="true">
                                            <div class="input-group-addon">
                                                <span class="fa fa-calendar"></span>
                                            </div>
                                        </div>
                                        <p ng-show="fmMainpack.end.$error.required && (fmMainpack.end.$dirty || maintenancesubmitted)" class="help-block">End Date is required.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">Price:</label>
                                    <div class="col-lg-8" data-ng-class="{ 'has-error' : fmMainpack.price.$invalid && (fmMainpack.price.$dirty || maintenancesubmitted)}">
                                        <input id="price" name="price" ng-model="objmainpack.price" class="form-control" placeholder="Price" type="number" ng-required="true" only-num>
                                        <p ng-show="fmMainpack.price.$error.required && (fmMainpack.price.$dirty || maintenancesubmitted)" class="help-block">Price is required.</p>
                                    </div>
                                </div>

                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">Remarks:</label>
                                    <div class="col-lg-8">
                                        <textarea id="remarks" name="remarks" ng-model="objmainpack.remarks" class="form-control" placeholder="Remarks" type="text"></textarea>
                                    </div>
                                </div>
                               
                            </div>
                          

                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label class="col-lg-4 control-label">&nbsp;</label>
                                    <div class="col-lg-8">
                                        <button class="btn btn-labeled btn-success" type="button" ng-click="Savemaintenance(objmainpack)">
                                            <span class="btn-label">
                                                <em class="fa fa-floppy-o"></em>
                                            </span>
                                            Save
                                        </button>
                                        <button class="btn btn-labeled btn-info" type="button" ng-click="ClearMaintenance()" href="javascript:void(0)">
                                            <span class="btn-label">
                                                <em class="fa fa-eraser"></em>
                                            </span>
                                            Reset
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-init="GetMaintenanceList()">
            <div class="panel panel-info block4" style="position: static; zoom: 1;">
                <div class="panel-heading">
                    Maintenance List
                    <div class="pull-right">
                        @*<a href="#" data-perform="panel-collapse"><i class="ti-minus"></i></a>*@
                        <button type="button" ng-click="showAddLeadPanel=true;" class="btn btn-success">Add New </button>
                    </div>
                </div>

                <div class="panel-wrapper collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <table id="dtMaintenanceList" class="display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Customer Code</th>
                                    <th>Machine Code</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <hr>
        </div>

    </div>

    <script type="text/javascript">
        function EditMaintenance(d) {
            var scope = angular.element(document.getElementById("MaintenanceCntrl")).scope();
            scope.EditMaintenance(d);
        }

        function DeleteMaintenance(d) {
            var scope = angular.element(document.getElementById("MaintenanceCntrl")).scope();
            scope.DeleteMaintenance(d);
        }
    </script>
</div>




